{
  "name": "HUEMCP",
  "version": "0.1.0",
  "description": "Philips Hue MCP Server for controlling Philips Hue smart lights",
  "main": "dist/index.js",
  "author": {
    "name": "Fl0p",
    "email": "flopsmp@gmail.com",
    "url": "https://github.com/Fl0p/HUEMCP"
  },
  "license": "MIT",
  "keywords": [
    "mcp",
    "philips-hue",
    "smart-home",
    "lighting",
    "smart-lights"
  ],
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "tsc && node dist/index.js",
    "setup": "tsc && node dist/index.js setup",
    "dev": "NODE_ENV=development tsc && NODE_ENV=development node dist/index.js",
    "dev:mcp": "NODE_ENV=development tsc && NODE_ENV=development node dist/index.js start",
    "dev:setup": "NODE_ENV=development tsc && NODE_ENV=development node dist/index.js setup",
    "manifest": "node scripts/generate-manifest.js",
    "build:manifest": "yarn build && yarn manifest",
    "mcpb": "yarn build && yarn manifest && mcpb pack . ./build/huemcp.mcpb",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.6.0",
    "bonjour-service": "^1.3.0",
    "dotenv": "^17.2.3"
  },
  "devDependencies": {
    "@anthropic-ai/mcpb": "latest",
    "@types/bonjour": "^3.5.13",
    "@types/node": "^20.0.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "packageManager": "yarn@4.11.0"
}
