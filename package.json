{
  "name": "huemcp",
  "version": "0.1.0",
  "description": "Philips Hue MCP Server Bundle with API v2 support via hue-sync",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsc && node dist/index.js",
    "dev:mcp": "tsc && node dist/index.js start",
    "dev:setup": "tsc && node dist/index.js setup",
    "manifest": "node scripts/generate-manifest.js",
    "build:manifest": "yarn build && yarn manifest",
    "mcpb": "yarn build && yarn manifest && mcpb pack . ./build/huemcp.mcpb",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "mcp",
    "philips-hue",
    "hue-api-v2",
    "smart-home",
    "hue-sync",
    "lighting",
    "smart-lights"
  ],
  "author": "Flop",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.6.0",
    "bonjour-service": "^1.3.0",
    "hue-sync": "^0.1.3"
  },
  "devDependencies": {
    "@anthropic-ai/mcpb": "latest",
    "@types/bonjour": "^3.5.13",
    "@types/node": "^20.0.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "packageManager": "yarn@4.11.0"
}
