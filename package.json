{
  "name": "huemcp",
  "version": "0.1.0",
  "description": "Philips Hue MCP Server Bundle",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsc && node dist/index.js",
    "dev:mcp": "tsc && node dist/index.js start",
    "dev:setup": "tsc && node dist/index.js setup",
    "mcpb": "tsc && mcpb pack . ./build/huemcp.mcpb",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "mcp",
    "philips-hue",
    "smart-home"
  ],
  "author": "Flop",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.6.0",
    "bonjour-service": "^1.3.0",
    "hue-sync": "^0.1.3"
  },
  "devDependencies": {
    "@anthropic-ai/mcpb": "latest",
    "@types/bonjour": "^3.5.13",
    "@types/node": "^20.0.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "packageManager": "yarn@4.11.0"
}
